<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Manager</title>
</head>
<body>
    <h1>Add Manager</h1>
    <% if (errors) { %>
        <% errors.forEach(function(error) { %>
            <p style="color: red;"><%= error %></p>
        <% }); %>
    <% } %>
    
    <form action="/managers/add" method="POST">
        <label for="managerId">Manager ID</label>
        <input type="text" id="managerId" name="managerId" required minlength="4" maxlength="4" pattern="M[0-9]{3}">
        
        <label for="name">Name</label>
        <input type="text" id="name" name="name" required minlength="6">
        
        <label for="salary">Salary</label>
        <input type="number" id="salary" name="salary" required min="30000" max="70000">
        
        <button type="submit">Add</button>
    </form>

    <a href="/">Home</a>
</body>
</html>
